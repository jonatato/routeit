{
  "name": "routeit",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host",
    "dev:mobile": "vite --host --port 5173 --strictPort",
    "build": "vite build",
    "build:staging": "vite build --mode staging",
    "build:production": "vite build --mode production",
    "lint": "eslint .",
    "preview": "vite preview",
    "cap:build": "npm run build",
    "cap:build:staging": "npm run build:staging",
    "cap:build:production": "npm run build:production",
    "cap:add:android": "cap add android",
    "cap:add:ios": "cap add ios",
    "cap:sync": "cap sync",
    "cap:sync:staging": "npm run cap:build:staging && cap sync",
    "cap:sync:production": "npm run cap:build:production && cap sync",
    "cap:assets": "capacitor-assets generate",
    "cap:copy": "cap copy",
    "cap:android": "cap open android",
    "cap:ios": "cap open ios",
    "cap:run:android": "cap run android",
    "cap:run:ios": "cap run ios",
    "cap:run:android:live": "cap run android -l --host localhost --port 5173 --forwardPorts 5173:5173",
    "cap:run:ios:live": "cap run ios -l --port 5173",
    "capgo:login": "npx @capgo/cli login",
    "capgo:init": "npx @capgo/cli init",
    "capgo:doctor": "npx @capgo/cli doctor",
    "capgo:upload:production": "npm run build:production && npx @capgo/cli bundle upload com.routeit.routeit --path ./dist --channel production --bundle %npm_config_bundle%",
    "android:apk:debug": "npm run cap:sync:production && cd android && gradlew.bat assembleDebug",
    "ota:release": "node scripts/ota-release.mjs",
    "android:apk:release": "npm run cap:sync:production && cd android && gradlew.bat assembleRelease",
    "android:aab:release": "npm run cap:sync:production && cd android && gradlew.bat bundleRelease"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.1",
    "@capacitor/app": "^8.0.0",
    "@capacitor/cli": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "@capacitor/ios": "^8.0.1",
    "@capacitor/local-notifications": "^8.0.0",
    "@capacitor/push-notifications": "^8.0.0",
    "@capgo/capacitor-updater": "^8.43.7",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@radix-ui/react-tabs": "^1.1.13",
    "@sentry/react": "^8.14.0",
    "@supabase/supabase-js": "^2.91.1",
    "@tiptap/extension-link": "^3.17.1",
    "@tiptap/react": "^3.17.1",
    "@tiptap/starter-kit": "^3.17.1",
    "capacitor-native-biometric": "^4.2.2",
    "clsx": "^2.1.1",
    "dexie": "^4.2.1",
    "dompurify": "^3.3.1",
    "driver.js": "^1.3.1",
    "flowbite": "^4.0.1",
    "flowbite-react": "^0.12.16",
    "framer-motion": "^12.29.0",
    "gsap": "^3.14.2",
    "html2canvas": "^1.4.1",
    "i18next": "^25.8.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "jspdf": "^4.0.0",
    "leaflet": "^1.9.4",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.563.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.5.3",
    "react-leaflet": "^5.0.0",
    "react-router-dom": "^7.13.0",
    "recharts": "^3.7.0",
    "sileo": "^0.1.4",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@capgo/cli": "^7.74.4",
    "@eslint/js": "^9.39.1",
    "@types/leaflet": "^1.9.21",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "adm-zip": "^0.5.16",
    "autoprefixer": "^10.4.19",
    "dotenv": "^17.3.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.4.47",
    "supabase": "^2.76.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
